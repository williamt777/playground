<%= form_with(model: checkpoint, local: true) do |form| %>

  <%= render 'shared/form_error', the_object: checkpoint %>

<style>
  .bg-white-flatpickr { background-color: white !important; }
</style>

  <!-- attr: checked_at date, uses flatpickr -->
  <div class="form-row">
    <div class="col-6 form-group">
      <%= form.label :check_at %>
      <div class="input-group mb-3">
        <%= form.text_field :check_at, id: 'check-date',
                            class: 'form-control bg-white-flatpickr' %>
        <div class="input-group-append">
          <span class="input-group-text" id="basic-addon2"><i class="far fa-calendar-alt"></i></span>
        </div>
      </div>
    </div>
  </div>

  <!-- attr: handle -->
  <div class="form-row">
    <div class="col-6 form-group">
      <%= form.label :handle %>
      <%= form.text_field :handle, class: 'form-control' %>
    </div>
  </div>

  <!-- attr: description text box -->
  <div class="form-row">
    <div class="form-group col-md-9">
      <%= form.label :description %>
      <br>
      <div>
        <% num_rows = ux_textarea_rows(checkpoint.description, max_rows=5) %>
        <%= form.text_area :description, rows: num_rows, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Ok", class: "btn btn-outline-success" %>
  </div>

<% end %>
