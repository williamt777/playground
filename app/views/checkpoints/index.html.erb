<div class="container">
  <div class="row mt-5">
    <div class="col">

<span id="notice"><%= notice %></span>

<h3>All checkpoints</h3>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Check at</th>
      <th>Duration days</th>
      <th>Handle</th>
      <th>Description</th>
      <th>School</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkpoints.each do |checkpoint| %>
      <tr>
        <td><%= checkpoint.id %></td>
        <td><%= checkpoint.check_at %></td>
        <td><%= checkpoint.duration_days %></td>
        <td><%= checkpoint.handle %></td>
        <td><%= checkpoint.description %></td>
        <td><%= checkpoint.school_id %></td>
        <td><%= checkpoint.student_id %></td>
        <td><%= link_to 'Show', checkpoint %></td>
        <td><%= link_to 'Edit', edit_checkpoint_path(checkpoint) %></td>
        <td><%= link_to 'Destroy', checkpoint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="mt-4">
  <%= link_to '+ New Checkpoint', new_checkpoint_path, class: "btn btn-outline-success" %>
</p>

<p class="mt-3">
  <%= link_to '< Home', root_path %>
</p>

    </div>
  </div>
</div>
