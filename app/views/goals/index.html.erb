<div class="container">
  <div class="row mt-5">
    <div class="col">

<span id="notice"><%= notice %></span>

<h3>All goals</h3>

<table class="table table-hover table-striped" style="width: 50%;">
  <thead>
    <tr>
      <th style="width: 75%;">Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.name %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="mt-4">
  <%= link_to '+ New goal', new_goal_path, class: "btn btn-outline-success" %>
</p>

<p class="mt-3">
  <%= link_to '< Home', root_path %>
</p>

    </div>
  </div>
</div>
