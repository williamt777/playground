<%= form_with(model: student, local: true) do |form| %>

  <%= render 'shared/form_error', the_object: student %>

  <!-- text field: name -->
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <!-- spinner: school -->
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :school_id %>
      <%= form.select :school_id, @schools.map{ |c| [c.name, c.id]},
                                  { }, { :class => 'form-control' } %>
    </div>
  </div>

  <!-- text field: email -->
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <!-- text field: grade_level -->
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :grade_level %>
      <%= form.text_field :grade_level, class: 'form-control' %>
    </div>
  </div>

  <!-- ok button -->
  <div class="actions">
    <%= form.submit "Ok", class: "btn btn-outline-success" %>
  </div>

<% end %>
