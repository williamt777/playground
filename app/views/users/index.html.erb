<div class="container">
  <div class="row mt-5">
    <div class="col">

<span id="notice"><%= notice %></span>

<h3>All users</h3>
<p class="text-muted my-3">
  Click on the column heading to sort
</p>

<style>
  .border-sorted {
    padding: 8px;
    border: 1px solid RebeccaPurple;
    border-radius: 8px;
    background-color: ghostwhite;
  }
  .border-not-sorted {
    padding: 8px;
    border: 1px solid white;
    border-radius: 8px;
    background-color: white;
  }
</style>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>
        <%= link_to 'Name', users_path(sort_by: "nD"), remote: true,
                            id: "name-link", class: "border-sorted" %>
      </th>
      <th class="d-none d-lg-table-cell"><%= link_to 'Email', users_path(sort_by: "eA"), remote: true,
                               id: "email-link",
                               class: "border-not-sorted" %></th>
      <th><%= link_to 'Stars', users_path(sort_by: "sA"), remote: true,
                               id: "stars-link", class: "border-not-sorted" %></th>
      <th class="d-none d-lg-table-cell">Party time</th>
      <th>+/-</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody id="users-body">
    <!-- Rails magic renders user partial foreach user in the collection -->
    <%= render @users %>
  </tbody>
</table>

<p class="mt-4">
  <%= link_to '+ New User', new_user_path, class: "btn btn-outline-success" %>
</p>

<!-- get the js to support this button -->

<!-- nav: breadcrumbs -->
<%= render 'shared/breadcrumbs', cur_page: 'All users' %>


    </div>
  </div>
</div>

<%= javascript_pack_tag 'hello', 'data-turbolinks-track': 'reload' %>
