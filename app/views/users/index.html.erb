<div class="container">
  <div class="row mt-5">
    <div class="col">


  <span id="notice" class="float-right"><%= notice %></span>

  <!-- header: home page title -->
  <h3>
    <small><i class="far fa-smile mr-2 text-success"></i></small>
    Home &mdash; All users
    <small class="text-secondary">
      <i class="fas fa-question-circle ml-3"
         data-toggle="tooltip"
         data-placement="bottom"
         title="Tooltip text for users index. Huzzah!"></i>
     </small>
  </h3>

<style>
  .border-sorted {
    padding: 8px;
    border: 1px solid RebeccaPurple;
    border-radius: 8px;
    background-color: ghostwhite;
  }
  .border-not-sorted {
    padding: 8px;
    border: 1px solid white;
    border-radius: 8px;
    background-color: white;
  }
</style>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>
        <%= link_to 'Name', users_path(sort_by: "nD"), remote: true,
                            id: "name-link", class: "border-sorted" %>
      </th>
      <th class="d-none d-lg-table-cell"><%= link_to 'Email', users_path(sort_by: "eA"), remote: true,
                               id: "email-link",
                               class: "border-not-sorted" %></th>
      <th><%= link_to 'Stars', users_path(sort_by: "sA"), remote: true,
                               id: "stars-link", class: "border-not-sorted" %></th>
      <th class="d-none d-lg-table-cell">Party time</th>
      <th>+/-</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody id="users-body">
    <!-- Rails magic renders user partial foreach user in the collection -->
    <%= render @users %>
  </tbody>
</table>

<p class="mt-3 mr-3 text-right">
  <%= link_to '+ New User', new_user_path, class: "btn btn-outline-success" %>
</p>


<!-- get the js to support this button -->

<p class="mt-3">
  All index pages:
  &nbsp; &nbsp;
  <%= link_to 'All Students', students_path %>
  &nbsp; | &nbsp;
  <%= link_to 'All Journals', journals_path %>
</p>

<p>
  Testing:
  &nbsp; &nbsp;
  <%= link_to 'Import CSV', import_csv_path, class: "btn btn-outline-secondary" %>
  &nbsp; &nbsp;
  <%= link_to 'Chart fun', chart_fun_path, class: "btn btn-outline-info" %>
  &nbsp; &nbsp;
  <%= link_to 'My Calendar', my_calendar_test_path, class: "btn btn-outline-warning" %>
  &nbsp; &nbsp;
  <%= link_to 'Calendar', calendar_test_path, class: "btn btn-outline-primary" %>
  &nbsp; &nbsp;
  <%= link_to 'Webpack test', "#", id: "webpack-test", class: "btn btn-outline-danger" %>
  &nbsp; &nbsp;
  <%= link_to 'Webpack test #2', "#", id: "webpack-test2", class: "btn btn-outline-danger" %>
</p>

<hr>
<p>
  Bill - your laptop says hello. &nbsp; <i class="fas fa-laptop"></i>
</p>
<p>
  This is an image in the asset pipeline.
  <%= image_tag "crayons2.jpg", style: 'height:128px;'%>
</p>


    </div>
  </div>
</div>

<%= javascript_pack_tag 'hello', 'data-turbolinks-track': 'reload' %>

